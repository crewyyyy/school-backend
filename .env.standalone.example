APP_PORT=8000
HOST_PORT=8000
PUBLIC_SCHEME=http
PUBLIC_HOST=YOUR_SERVER_IP
APP_VERSION=1.3.0

# Use long random value in production
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_SECRET

AUTO_CREATE_ADMIN=true
BOOTSTRAP_ADMIN_LOGIN=admin
BOOTSTRAP_ADMIN_PASSWORD=admin123

# Push notifications (Firebase)
FCM_SERVICE_ACCOUNT_JSON=/app/secrets/fcm-service-account.json
FCM_TOPIC=school_all

# Telegram push bot (optional but recommended)
TG_BOT_TOKEN=PASTE_TELEGRAM_BOT_TOKEN
TG_ADMIN_CHAT_ID=123456789
# Optional comma-separated extra allowed chat IDs:
# TG_BOT_ALLOWED_CHAT_IDS=123456789,987654321
TG_BOT_API_BASE_URL=http://backend:8000
TG_BOT_API_LOGIN=admin
TG_BOT_API_PASSWORD=admin123
TG_BOT_DEFAULT_TITLE=EduFlow notification

# Optional overrides:
# STANDALONE_DATABASE_URL=sqlite+pysqlite:////data/school.db
# STANDALONE_MEDIA_DIR=/data/media
# STANDALONE_MEDIA_BASE_URL=http://YOUR_SERVER_IP:8000/media
# STANDALONE_ALLOW_EXTERNAL_DB=false
